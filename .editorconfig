root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = false
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[*.{yml,yaml}]
indent_size = 2

[*.js]
indent_size = 2

[*.{ts,tsx}]
indent_size = 2

[*.sh]
indent_size = 2

[*.sample]
indent_size = 2
